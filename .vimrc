set hidden
set number
set tabstop=4
set shiftwidth=4
set autoindent
set copyindent
set showmatch
set ignorecase
set smartcase
set smarttab
set hlsearch
set incsearch
set nobackup
set noswapfile
set pastetoggle=<F2>

filetype plugin indent on
autocmd filetype python set expandtab

colorscheme desert
syntax on

